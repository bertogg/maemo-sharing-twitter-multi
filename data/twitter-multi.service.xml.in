<?xml version="1.0" encoding="UTF-8"?>
<service plugin="libtwittermulti.so" provider="Alberto Garcia">
  <accounts plugInSetup="1" plugInEdit="1">
    <signup>https://twitter.com/signup</signup>
  </accounts>
  <ui>
    <name>Twitter</name>
    <icon type="post">@servicesdir@/twitter-multi.png</icon>
    <icon type="setup">@servicesdir@/twitter-multi.png</icon>
    <options>
      <option id="service" type="enumeration" default="twitter">
        <caption key="Service"/>
        <value id="twitter" key="Twitter"/>
        <value id="twitpic" key="Twitpic"/>
        <value id="mobypicture" key="Mobypicture"/>
        <value id="imgly" key="img.ly"/>
        <value id="posterous" key="Posterous"/>
        <value id="yfrog" key="yfrog"/>
      </option>
      <option id="posttotwitter" type="enumeration" default="yes">
        <caption key="Post link to Twitter?"/>
        <value id="yes" key="Yes"/>
        <value id="no" key="No"/>
      </option>
    </options>
  </ui>
</service>
